%ul.nav.nav-pills

  = active_link_to wizard_path(:intro), wrap_tag: :li do
    %i.fa.fa-map-marker
    = t".intro"
  = active_link_to wizard_path(:address), wrap_tag: :li do
    %i.fa.fa-map-marker
    = t".address"

  - if @cart.shipping_address.persisted? && @cart.billing_address.persisted?
    = active_link_to wizard_path(:delivery), wrap_tag: :li do
      %i.fa.fa-truck
      = t".delivery"
  - else
    %li.disabled
      = link_to "#" do
        %i.fa.fa-truck
        = t".delivery"

  - if @cart.delivery_service && @cart.delivery_service.persisted?
    = active_link_to wizard_path(:payment), wrap_tag: :li do
      %i.fa.fa-credit-card
      = t".payment"
  - else
    %li.disabled
      = link_to "#" do
        %i.fa.fa-credit-card
        = t".payment"
