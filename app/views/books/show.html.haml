.row.book-details
  .col-md-3
    = image_tag @book.cover.standard.url, class: "book-cover"
  .col-md-2
  .col-md-7
    %h1= @book.title
    %p= @book.description.html_safe

    = simple_form_for :add_to_cart, url: add_to_cart_book_path, method: :put, html: {class: "cart form-horizontal"}, wrapper: :horizontal_form do |f|
      .row
        .col-sm-6= f.input :quantity, as: :integer, input_html: {value: 1, max: @book.books_in_stock}
        .col-sm-6
          = button_tag(type: "submit", class: "btn btn-primary") do
            %i.fa.fa-cart-plus
            Add to Cart

    = link_to book_wish_list_books_path(@book), method: :post do
      %i.fa.fa-plus
      Add to wish list

%h1 Ratings
.row
  .col-md-6
    = render partial: "rating", collection: @book.ratings.approved.latest
    :javascript
      $(".rating-stars").raty({
        score: function() {
          return $(this).attr('data-score');
        },
        readonly: true
      });
  .col-md-6
    = render partial: "new_rating", locals: { new_rating: @new_rating, book: @book }
